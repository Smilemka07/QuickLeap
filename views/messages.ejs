<%-include ("partials/header") %>
<div id="main">
  <%-include ("partials/navbar") %>

  <!-- left side pannel  -->
  <%-include ("partials/leftPanel") %>

  <div id="center_pannel" class="col-8">
    <section class="chat border rounded">
      <!-- Chat List -->
      <div class="chat-list">
        <div class="chat-item messages-active">
          <img
            src="/images/Pfa.png"
            alt="Profile picture"
            class="profile-icon"
          />
          <div>
            <p><strong>Alice</strong></p>
            <p>Hey! How are you?</p>
          </div>
        </div>
        <div class="chat-item ">
           <img
            src="/images/Pfa.png"
            alt="Profile picture"
            class="profile-icon"
          />
           <div>
            <p><strong>Bob</strong></p>
            <p>Let’s catch up tomorrow.</p>
          </div>
        </div>
      </div>

      <!-- Chat Window -->
      <div class="chat-window">
        <div class="chat-header border">
          <h3>Alice</h3>
        </div>

        <div class="chat-messages">
          <div class="message received">Hey! How are you?</div>
          <div class="message sent">I’m good, thanks! What about you?</div>
          <div class="message received">Doing well :)</div>
        </div>

        <form class="chat-input">
          <input
            type="text"
            class="form-control"
            placeholder="Type a message..."
          />
          <button type="submit" class="btn">Send</button>
        </form>
      </div>
    </section>
  </div>
</div>
