<div class="chat-list vertical-scroll">
  <% matches.forEach(match => { %>
  <a
    href="/messages/<%= match.match_id %>"
    class="chat_list_item"
    style="color: black "
  >
    <div class="chat-item messages-active">
      <div class="pfp-wrapper">
      <img
        src="<%= match.friend_pfp %>"
        class="rounded-circle pfp"
        alt="Profile icon"
      />
      </div>
      <div class="chat-text">
        <p class="card-title"><strong><%= match.friend_name %></strong></p>
        <p class="card-text last-message"><%= match.last_message ?? "Say hello ðŸ‘‹" %></p>
      </div>
    </div>
  </a>
  <% }) %>
</div>
