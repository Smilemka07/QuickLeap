<%- include("partials/header") %>
<div id="main">
  <%-include ("partials/navbar") %>

  <div class="container main_body">
    <div class="tutorial-page col-12">
      <div class="bg_box" style="height: 100vh">
        <h1 class="mb-3 h4"><%= tutorial.title %></h1>

        <p class="text-muted mb-4"><%= tutorial.description %></p>

        <div class="viewer">

          <% if (tutorial.content_type === "video") { %>
            
          <div class="video-section mb-5">
            <video controls autoplay width="100%" height="480">
              <source src="/<%= tutorial.video_url %>" type="video/mp4" /> 
              Your browser does not support the video tag.
            </video>
            <p class="text-secondary mt-2">
              Duration: <%= tutorial.duration %> mins
            </p>
          </div>

          <% } else if (tutorial.content_type === "notes") { %>

          <div class="notes-section">
           
            <% if (tutorial.notes) { %>
            <iframe
              src="/<%= tutorial.notes %>"
              width="100%"
              height="480"
            ></iframe>
            <% } else { %>
            <p>No notes available.</p>
            <% } %>
          </div>

          <% } else { %>
          <p>Unknown tutorial type. Coming soon.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
